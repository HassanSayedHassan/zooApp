<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".birds">

    <TextView
        android:id="@+id/namebirdid"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imagebirdid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/imagebirdid"
        android:layout_width="321dp"
        android:layout_height="212dp"
        app:srcCompat="@drawable/deak" />

    <ImageButton
        android:id="@+id/btnbirdid"
        android:layout_width="102dp"
        android:layout_height="68dp"
        android:layout_above="@id/imagebirdid"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/play_normal"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/btnnextid"
        android:layout_centerVertical="true"
        android:layout_width="113dp"
        android:layout_height="84dp"
        android:background="@color/black"
        android:layout_marginRight="90dp"
        app:srcCompat="@android:drawable/ic_media_next"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/btnbacktid"
        android:layout_width="97dp"
        android:layout_height="73dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="160dp"
        android:background="@color/white"
        app:srcCompat="@drawable/back"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>
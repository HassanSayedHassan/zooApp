<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63BD67"
    tools:context=".choose">

    <ImageView
        android:id="@+id/birdsid"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_width="256dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/birds1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="153dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        app:srcCompat="@drawable/anmial" />

    <TextView
        android:id="@+id/textView"
        android:layout_marginLeft="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birds"
        android:textSize="40dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_below="@id/birdsid"
        tools:ignore="UnknownId" />
    <TextView
        android:id="@+id/textView2"

        android:layout_marginEnd="180dp"
        android:layout_marginRight="98dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animals"
        android:textSize="40dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_below="@id/imageView2"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/questionbtnid"
        android:layout_width="267dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:paddingBottom="-1dp"
        android:text="Questions"
        android:textAllCaps="false"
        android:textSize="40dp"
        app:backgroundTint="#006A6A6A"
        app:cornerRadius="40dp"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />
</RelativeLayout>